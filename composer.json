{
  "name": "gdarko/digital-license-manager",
  "autoload": {
    "psr-4": {
      "IdeoLogix\\DigitalLicenseManager\\": "includes/"
    }
  },
  "require": {
    "ext-openssl": "*",
    "ext-json": "*",
    "defuse/php-encryption": "^2.2",
    "ignitekit/wp-notices": "^1.0",
    "spipu/html2pdf": "^5.2",
    "tecnickcom/tcpdf": "^6.4"
  },
  "config": {
    "optimize-autoloader": true
  },
  "scripts": {
    "clean-up": [
      "composer reinstall tecnickcom/tcpdf --no-scripts",
      "rm -rf _tmp",
      "mkdir -p _tmp",
      "cp -r vendor/tecnickcom/tcpdf/fonts _tmp/fonts",
      "rm -rf vendor/tecnickcom/tcpdf/fonts/*",
      "cp _tmp/fonts/courier.* vendor/tecnickcom/tcpdf/fonts",
      "cp _tmp/fonts/helvetica.* vendor/tecnickcom/tcpdf/fonts",
      "rm -rf _tmp"
    ],
    "post-install-cmd": [
      "@clean-up"
    ],
    "post-update-cmd": [
      "@clean-up"
    ]
  }
}
